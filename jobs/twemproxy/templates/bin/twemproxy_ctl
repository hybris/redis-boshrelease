#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables


# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/twemproxy/helpers/ctl_setup.sh 'twemproxy'

#JOB_NAME=twemproxy
#
#LOG_DIR=/var/vcap/sys/log/$JOB_NAME
#JOB_DIR=/var/vcap/jobs/$JOB_NAME
#
#PACKAGE_DIR=/var/vcap/packages/$JOB_NAME
#
#RUN_DIR=/var/vcap/sys/run/$JOB_NAME
#
#PIDFILE=$RUN_DIR/$JOB_NAME.pid


case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    #mkdir -p $RUN_DIR
    #mkdir -p $LOG_DIR

    # store pid in $PIDFILE
    #echo $$ > $PIDFILE # managed by twemproxy

    exec chpst -u vcap:vcap nutcracker -c $JOB_DIR/config/twemproxy.yml -p $PIDFILE \
         1>>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  start)
   kill_and_wait $PIDFILE
    pid_guard $PIDFILE $JOB_NAME

    #mkdir -p $RUN_DIR
    #mkdir -p $LOG_DIR

    # store pid in $PIDFILE
    #echo $$ > $PIDFILE # managed by twemproxy

    exec chpst -u vcap:vcap nutcracker -c $JOB_DIR/config/twemproxy.yml -p $PIDFILE \
         1>>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: twemproxy_ctl {start|stop}"

    ;;

esac
exit 0
