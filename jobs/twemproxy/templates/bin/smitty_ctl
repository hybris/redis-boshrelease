#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
#source /var/vcap/jobs/twemproxy/helpers/ctl_setup.sh 'smitty'

JOB_NAME=smitty
RUN_DIR=/var/vcap/sys/run/twemproxy
PIDFILE=$RUN_DIR/smitty.pid


case $1 in

  start)
    #pid_guard $PIDFILE $JOB_NAME




    # store pid in $PIDFILE
    echo $$ > $PIDFILE

    exec /var/vcap/packages/smitty/src/smitty/smitty -c /var/vcap/jobs/twemproxy/config/smitty.yml &

    ;;

   stop)
    #kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: smitty {start|stop}"

    ;;

esac
exit 0
